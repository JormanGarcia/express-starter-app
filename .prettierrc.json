{
  "plugins": [
    "@trivago/prettier-plugin-sort-imports"
  ],
  "semi": true,
  "trailingComma": "all",
  "singleQuote": true,
  "printWidth": 120,
  "tabWidth": 2,
  "importOrder": [
    "dotenv(/.*)?$",
    "reflect-metadata(/.*)?$",
    "express(/.*)?$",
    "^[a-zA-Z]",
    "@/middlewares(/.*)?$",
    "@/controllers(/.*)?$",
    "@/routes(/.*)?$",
    "@/services(/.*)?$",
    "@/security(/.*)?$",
    "@/repositories(/.*)?$",
    "@/models(/.*)?$",
    "@/dtos(/.*)?$",
    "@/utils(/.*)?$",
    "[./]"
  ],
  "importOrderSortSpecifiers": true
}